{
  "manifest_version": 3,
  "name": "Phishing Website Guard",
  "version": "1.0.0",
  "description": "访问网页时调用本地AI模型分析风险并给出拦截提示。",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:5000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "blocked/blocked.html",
        "blocked/blocked.css",
        "blocked/blocked.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}